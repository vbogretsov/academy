@model Academy.Presentation.ViewModels.Profile

<div class="span6">
    @using (Html.BeginForm(
        "Edit",
        "Profile",
        FormMethod.Post,
        new {@class = "form-horizontal", style = "padding: 0", enctype = "multipart/form-data"}))
    {
        @Html.ValidationSummary(true)

        @Html.EditorForModel("EditUserEditor");
    }
</div>
<div class="span3 pull-right">
    @using (Html.BeginForm(
        "SelectDisciplines",
        "Profile",
        FormMethod.Post,
        new {enctype = "multipart/form-data"}))
    {
        @Html.EditorForModel("EditDisciplinesEditor");
    }

</div>

