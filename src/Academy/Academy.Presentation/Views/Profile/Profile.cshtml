@using Academy.Resources
@model Academy.Presentation.ViewModels.Profile

<div class="control-group">
    <ul class="thumbnails">
        <li class="span3">
            <div class="thumbnail">
                @if (String.IsNullOrEmpty(Model.PhotoFileName))
                {
                    <img src="/Resources/Users/0.jpg" />
                }
                else
                {
                    <img src="/Resources/Users/@Model.PhotoFileName"/>
                }
            </div>
        </li>
    </ul>
    @Html.ActionLink(
        Localization.GetString("profile.myarticles"),
        "GetArticles",
        "Profile",
        new {@class = "btn btn-block"})
    @Html.ActionLink(
        Localization.GetString("profile.mycomment"),
        "GetArticles",
        "Profile",
        new {@class = "btn btn-block"})
    @Html.ActionLink(
        Localization.GetString("prifile.myquestions"),
        "GetArticles",
        "Profile",
        new {@class = "btn btn-block"})
    @Html.ActionLink(
        Localization.GetString("profile.myanswers"),
        "GetArticles",
        "Profile",
        new {@class = "btn btn-block"})
</div>
