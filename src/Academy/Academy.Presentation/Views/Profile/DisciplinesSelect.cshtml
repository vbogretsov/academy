@using Academy.Presentation.Helpers;

@model Academy.Presentation.ViewModels.Profile

@using (Html.BeginForm(
        "SelectDisciplines",
        "Profile",
        FormMethod.Post,
        new { enctype = "multipart/form-data" }))
{
    @Html.ModalButton("disciplines", "Select disciplines", "btn-block")

    @Html.ModalVindowFor(
        Html.DisciplinesTreeFor("Disciplines", Model.Disciplines.ToList()),
        "disciplines",
        "Disciplines",
        "Close",
        "Save")
}

@Html.List(Model.Disciplines.ToList(), "Your disciplines", "list-flat", "text-hypenation")