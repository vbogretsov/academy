@model Academy.Presentation.ViewModels.CommentViewModel

@{
    const string commentTextClass = "full-block fixed-size pre-scrollable";
    const string commentTextStyle = "height: 80px; font-size:12pt";
}

@Html.HiddenFor(m => m.ArticleId)
@Html.TextAreaFor(m => m.Text, new
    {
        @class = commentTextClass,
        style = commentTextStyle,
        placeholder = Html.DisplayNameFor(m => m.Text)
    })
@Html.ValidationMessageFor(m => m.Text)
