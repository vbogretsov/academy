@using Academy.Presentation.Views.Helpers
@model Academy.Presentation.ViewModels.UserViewModel

@{
    var headerText = "Your disciplines";
}

<h4 class="label btn-block">
    @headerText
</h4>
@if (Model.Disciplines != null)
{
    <ul class="list-flat">
        @foreach(var discipline in Model.Disciplines)
        {
            <li>
                <span class="badge btn-block text-hypenation">@discipline.Name</span>
            </li>
        }
    </ul>
}
