@model Academy.Presentation.ViewModels.CommentViewModel

@{
    Layout = "PostView.cshtml";
}

@{
    var removeId = String.Format("removeComment{0}", Model.Id);
    var removeText = "Remove comment";
    //var commentId = String.Format("comment{0}", Model.Id);
    //var postedText = "Posted: ";
}

@section Author
{
    @String.Format(
        "{0} {1} {2}",
        Model.Author.Email,
        Model.Author.FirstName,
        Model.Author.LastName)
}

@section Buttons
{
    @if (User.IsInRole("Admin"))
    {
        <div class="pull-right">
            <button class="btn btn-mini btn-danger" id="@removeId">
                @removeText
            </button>
        </div>
    }
}

