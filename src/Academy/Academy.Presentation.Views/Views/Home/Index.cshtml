@using System.Web.Optimization
@using Academy.Resources

@model Academy.Presentation.ViewModels.HomeViewModel

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/External.cshtml";
}
@{
    Html.EnableClientValidation(true);
}

<div class="span7">
    <div style="height: 100px;">
        <h1>@Localization.GetString("welcome")</h1>
    </div>
    <div id="flash">
    </div>
</div>

<div class="pull-right">
    @using (Html.BeginForm(
        "Login",
        "Account",
        FormMethod.Post,
        new { @class = "form-inline" }))
    {
        @Html.AntiForgeryToken()
        @Html.EditorForModel("LoginEditor")
    }
    <div class="page-header" style="text-align: right">
        <b>@Localization.GetString("registration.lbl.register")</b>
    </div>
    @using (Html.BeginForm(
        "Register",
        "Account",
        FormMethod.Post,
        new { @class = "form-inline pull-right" }))
    {
        @Html.AntiForgeryToken()
        @Html.EditorForModel("RegistrationEditor")
    }
</div>

@section headScripts
{
    @Scripts.Render("~/bundles/flash")
    <script type="text/javascript">
        swfobject.embedSWF('../../Content/images/@Localization.GetString("banner")', 'flash', '500', '400', '9.0.0')
    </script>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/tree")
}
