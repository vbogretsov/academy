@using Academy.Presentation.Views.Helpers;

@model Academy.Presentation.ViewModels.UserViewModel

@using (Html.BeginForm(
        "SelectDisciplines",
        "Profile",
        FormMethod.Post,
        new { enctype = "multipart/form-data" }))
{
    @Html.ModalButton("disciplines", "Select disciplines", "btn-block")

    @Html.ModalVindowFor(
        Html.DisciplinesTreeFor("disciplines", Model.Disciplines.ToList()),
            "disciplines",
            "Disciplines",
            "Close",
            "Save")
}

@Html.List(Model.Disciplines.ToList(), "Your disciplines", "list-flat", "text-hypenation")