@using System.Web.Optimization
@model Academy.Presentation.ViewModels.UserViewModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Internal.cshtml";
}
@section styles {
    @Styles.Render("~/Content/uploadify")
    @Styles.Render("~/Content/tree")
}
@section UserName
{
    @{ Html.RenderPartial("../Shared/RenderTemplates/UserName", Model); }
}

<div id ="profile" class="span3">
    @{
        Html.RenderPartial("../Shared/RenderTemplates/UserView", Model);
    }
</div>
<div id="data" class="span9">
    @{
        Html.RenderPartial("RenderTemplates/UserNotesView", Model);
    }
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/upload")
    @Scripts.Render("~/bundles/tree")
}
