@using Academy.Presentation.ViewModels
@model Academy.Presentation.ViewModels.UserViewModel

@{
    const string addArticleText = "Add new article";
    var articleTemplate = new ArticleViewModel();
}

<div class="accordion" id="accordion2">
    <div class="accordion-group">
        <div class="accordion-heading">
            <a class="accordion-toggle" data-toggle="collapse" data-parent="#accordion2" href="#collapseOne">
                @addArticleText
            </a>
        </div>
        <div id="collapseOne" class="accordion-body collapse">
            <div class="accordion-inner">
                @{
                    Html.RenderPartial("Forms/PublishArticleForm", articleTemplate);
                }
            </div>
        </div>
    </div>
</div>
<div id="userArticles">
    @{Html.RenderPartial("RenderTemplates/ArticlesView", Model);}
</div>
